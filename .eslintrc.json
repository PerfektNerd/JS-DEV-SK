{
	"root": true, //Tells ESLint that there are no other config files to look for
	"extends": [
		"eslint:recommended",
		"plugin:import/errors", //for invalid import statements
		"plugin:import/warnings"
	],
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module" //standard JS modules
	},
	"env": { //tells ESlint to expect global variables
		"browser": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"no-console": 1 // 0 = off, 1 = warning, 2 = error
	}
}
